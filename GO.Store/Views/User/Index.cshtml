<div id="user-profile-3" class="user-profile row">
    <div class="col-sm-offset-1 col-sm-10">

        <form class="form-horizontal">
            <input type="hidden" id="idUsuario" value="1" />
            <div class="tabbable">
                <ul class="nav nav-tabs padding-16">
                    <li class="active">
                        <a data-toggle="tab" href="#edit-basic" aria-expanded="true">
                            <i class="green ace-icon fa fa-pencil-square-o bigger-125"></i>
                            Informações
                        </a>
                    </li>

                    <li class="">
                        <a data-toggle="tab" href="#edit-password" aria-expanded="false">
                            <i class="blue ace-icon fa fa-key bigger-125"></i>
                            Senha
                        </a>
                    </li>
                </ul>

                <div class="tab-content profile-edit-tab-content">
                    <div id="edit-basic" class="tab-pane active">
                        <h4 class="header blue bolder smaller">Informações</h4>

                        <div class="row">

                            <div class="vspace-12-sm"></div>

                            <div class="col-xs-12 col-sm-8">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label no-padding-right" for="Name">Nome</label>
                                    <div class="col-sm-8">
                                        <input class="col-xs-12 col-sm-10" type="text" id="Name">
                                    </div>
                                </div>

                                <div class="space-4"></div>

                                <div class="form-group">
                                    <label class="col-sm-4 control-label no-padding-right" for="Login">Login</label>
                                    <div class="col-sm-8">
                                        <input class="col-xs-12 col-sm-10" type="text" id="Login">
                                    </div>
                                </div>

                                <div class="space-4"></div>

                                <div class="form-group">
                                    <label class="col-sm-4 control-label no-padding-right" for="Email">Email</label>
                                    <div class="col-sm-8">
                                        <input class="col-xs-12 col-sm-10" type="text" id="Email">
                                    </div>
                                </div>

                                <div class="space-4"></div>

                                <div class="form-group">
                                    <label class="col-sm-4 control-label no-padding-right" for="Telefone">Telefone</label>
                                    <div class="col-sm-8">
                                        <input class="col-xs-12 col-sm-3" type="text" id="DDDTelefone" placeholder="DDD" maxlength="3">
                                        <input class="col-xs-12 col-sm-7" type="text" id="Telefone" maxlength="10">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="edit-password" class="tab-pane">
                        <div class="space-10"></div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="Password">Nova Senha</label>
                            <div class="col-sm-9">
                                <input type="password" id="Password">
                            </div>
                        </div>

                        <div class="space-4"></div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="confirme-password">Confirme a Senha</label>
                            <div class="col-sm-9">
                                <input type="password" id="confirme-password">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="clearfix form-actions center">
                <button class="btn btn-sm" type="reset" id="resetar">
                    <i class="ace-icon fa fa-undo bigger-110"></i>
                    Cancelar
                </button>
                <button type="button" id="salvar" class="btn btn-sm btn-success">
                    Salvar
                    <i class="ace-icon fa fa-arrow-right icon-on-right bigger-110"></i>
                </button>
            </div>
        </form>
    </div>
</div>
<script src="~/Scripts/jquery-1.9.1.min.js"></script>
<script src="~/Scripts/app/user.js"></script>